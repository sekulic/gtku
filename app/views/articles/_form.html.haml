= form_for article, :html => { :class => 'form-horizontal' } do |f|
  - if article.errors.any?
    .row
      .col-lg-2
      .col-lg-8 
        .alert.alert-dismissable.alert-danger
          %strong= "#{pluralize(article.errors.count, "error")} prohibited this article from being saved:"
          %ul
            - article.errors.full_messages.each do |msg|
              %li= msg       
      .col-lg-1       

  .form-group
    = f.label :title, :class => 'col-lg-2 control-label'
    .col-lg-10
      = f.text_field :title, class: 'form-control'
  .form-group
    = f.label 'Category', :class => 'col-lg-2 control-label'
    .col-lg-10
      = f.select :category_id, Category.all.map{|u| [ u.name, u.id ] } , {}, :class => 'form-control'       
  .form-group
    = f.label 'Author', :class => 'col-lg-2 control-label'
    .col-lg-10
      = f.select :author_id, Author.all.map{|u| [ u.fullname, u.id ] } , {}, :class => 'form-control'       

  .form-group
    = f.label :description, :class => 'col-lg-2 control-label'
    .col-lg-10
      = f.text_area :description, class: 'form-control'    
  .form-group
    = f.label :text1, :class => 'col-lg-2 control-label'
    .col-lg-10
      = f.text_area :text1, class: 'form-control'
  .form-group
    = f.label :photo1, :class => 'col-lg-2 control-label'
    .col-lg-10
      = f.file_field :photo1, class: 'form-control'
  .form-group
    = f.label "Photo 1 desescription", :class => 'col-lg-2 control-label'
    .col-lg-10
      = f.text_field :p1desescription, class: 'form-control'    
  .form-group
    = f.label "Embed content 1", :class => 'col-lg-2 control-label'
    .col-lg-10
      = f.text_area :embed1, class: 'form-control'    
    
        
  .form-group
    = f.label :text2, :class => 'col-lg-2 control-label'
    .col-lg-10
      = f.text_area :text2, class: 'form-control'
  .form-group
    = f.label :photo2, :class => 'col-lg-2 control-label'
    .col-lg-10
      = f.file_field :photo2, class: 'form-control'
  .form-group
    = f.label "Photo 2 desescription", :class => 'col-lg-2 control-label'
    .col-lg-10
      = f.text_field :p2description, class: 'form-control'      
  .form-group
    = f.label "Embed content 2", :class => 'col-lg-2 control-label'
    .col-lg-10
      = f.text_area :embed2, class: 'form-control'
  
  .form-group
    = f.label :text3, :class => 'col-lg-2 control-label'
    .col-lg-10
      = f.text_area :text3, class: 'form-control'
  .form-group
    = f.label :photo3, :class => 'col-lg-2 control-label'
    .col-lg-10
      = f.file_field :photo3, class: 'form-control'
  .form-group
    = f.label "Photo 3 desescription", :class => 'col-lg-2 control-label'
    .col-lg-10
      = f.text_field :p3description, class: 'form-control'         
  .form-group     
    = f.label "Embed content 3", :class => 'col-lg-2 control-label'
    .col-lg-10
      = f.text_area :embed3, class: 'form-control'
    
  .form-group
    = f.label :text4, :class => 'col-lg-2 control-label'
    .col-lg-10
      = f.text_area :text4, class: 'form-control'
  .form-group
    = f.label :photo4, :class => 'col-lg-2 control-label'
    .col-lg-10
      = f.file_field :photo4, class: 'form-control'
  .form-group
    = f.label "Photo 4 desescription", :class => 'col-lg-2 control-label'
    .col-lg-10
      = f.text_field :p4description, class: 'form-control'           
