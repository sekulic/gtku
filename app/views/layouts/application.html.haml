%html(lang="en")
  =favicon_link_tag("favicon.png")
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title=full_title(yield(:title))
    %meta{:content => content_for?(:description) ? yield(:description) : "outstanding cultural understanding", :name => "description"}
    = stylesheet_link_tag    'journal', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'journal', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    #fb-root
    %script
      function(d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) return;
      js = d.createElement(s); js.id = id;
      js.src = "//connect.facebook.net/en_GB/sdk.js#xfbml=1&version=v2.0";
      fjs.parentNode.insertBefore(js, fjs);
      }(document, 'script', 'facebook-jssdk'))
    = render 'layouts/navbar'
    -if alert       
      .row
        .col-lg-12
          .alert alert-dismissable.alert-danger
          %center
            %h4=alert
       
    -elsif notice
      .row
        .col-lg-12
          .alert.alert-dismissable.alert-success
            %center
              %h4= notice
    = yield
    = render 'layouts/footer'